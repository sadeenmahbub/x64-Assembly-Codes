segment .data
	fmt: db "Multiplication: %d * %d = %d",10,0
	fmt2: db "Division: %d / %d = %d",10, "Remainder: %d",10,0
	fmt3: db "%d",0
	fmt4: db "%d",10,0
	value1 dd 11
	value2 dd -2

segment .bss

	val1 resb 16
	val2 resb 16
	val3 resb 16
	val4 resb 16

segment .text

	global main
	extern printf
	extern scanf

main:

	push rbp
	
	mov rdi, fmt3
	mov rsi, val1
	mov al, 0
	call scanf
	
	
	mov rdi, fmt3
	mov rsi, val2
	mov al, 0
	call scanf

	mov rdi, fmt3
	mov rsi, val3
	mov al, 0
	call scanf

	mov rdi, fmt3
	mov rsi, val4
	mov al, 0
	call scanf


	mov rdi, fmt4		
	;mov rsi, [val1]		;1st output
	mov rax, [val2]
	mov rcx, [val3]

	imul rcx

	idiv dword [val4]

	add rax, [val1]
	;mov rcx, rax 		;3rd output
	mov rsi, rax		;2nd output
	call printf
	



	mov rax, 0
	pop rbp
	ret
